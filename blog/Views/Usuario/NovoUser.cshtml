@{
    Layout = null;
}

@model RegistroViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/css/estilo.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <main id="login-form">
            <h2>Resenha Cultural - Login</h2>
            @Html.ValidationSummary()
            @using (Html.BeginForm("Cadastra", "Usuario", FormMethod.Post))
            {
                @Html.LabelFor(u => u.LoginName)
                @Html.TextBoxFor(u => u.LoginName, new { @class = "form-control" })

                @Html.LabelFor(u => u.Email)
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })

                @Html.LabelFor(u => u.Senha)
                @Html.PasswordFor(u => u.Senha, new { @class = "form-control" })

                @Html.LabelFor(u => u.ConfirmaSenha)
                @Html.PasswordFor(u => u.ConfirmaSenha, new { @class = "form-control" })

                <input type="submit" value="Cadastrar" />
            }
        </main>
    </div>
</body>
</html>
